{
  "name": "foobartory",
  "version": "1.0.0",
  "description": "Alma - foobartory - Thierry ABALEAâ€™s solution",
  "scripts": {
    "test": "npm run test:jest --",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/main.js",
    "build": "tsc",
    "start": "npm run build && node dist/main.js",
    "cast": "svg-term --command='node dist/main.js' --out=media/demo.svg --from=100 --window --width=150 --height=30 --term=iterm2 --profile=Snazzy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThierryAbalea/foobartory.git"
  },
  "keywords": [],
  "author": "Thierry ABALEA <t.abalea@gmail.com> (https://github.com/ThierryAbalea)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThierryAbalea/foobartory/issues"
  },
  "homepage": "https://github.com/ThierryAbalea/foobartory#readme",
  "dependencies": {
    "ink": "^3.0.8",
    "ink-big-text": "^1.2.0",
    "ink-divider": "^3.0.0",
    "ink-gradient": "^2.0.0",
    "ink-spinner": "^4.0.1",
    "react": "^17.0.1",
    "tinyqueue": "^2.0.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/ink-big-text": "^1.2.0",
    "@types/ink-divider": "^2.0.1",
    "@types/ink-gradient": "^2.0.1",
    "@types/ink-spinner": "^3.0.0",
    "@types/react": "^17.0.0",
    "@types/jest": "^26.0.16",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "svg-term-cli": "^2.1.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
